generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id      String    @id @default(uuid()) @db.Uuid
  ident   Int       @unique
  name    String    @unique
  image   String?
  health  Int
  attack  Int
  defense Int
  speed   Int
  height  Float
  weight  Float
  type    String[]
  isActive Boolean  @default(true)
}

model Type {
  id       String    @id @default(uuid()) @db.Uuid
  name     String    @unique
  isActive Boolean   @default(true)
}

model User {
  id       String    @id @default(uuid()) @db.Uuid
  uid      String    @unique
  name     String
  image    String
  email    String    @unique
  username String
  pass     String?
  fav      String[]
}
